    "verbose": true,
    "collectCoverageFrom": [
      "**client/**"
    ],
    "roots": [
      "client"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "babel-env": "^2.4.1",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "rollup": "^0.66.0",
    "standard-version": "^4.4.0"
  }
}
