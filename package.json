{
  "name": "@svenardo/jwt",
  "private": false,
  "version": "0.1.15",
  "description": "Just another JWT-tool",
  "author": "Sven Anders Robbestad <robbestad@gmail.com>",
  "main": "bundle.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
